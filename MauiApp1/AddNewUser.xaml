<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.AddNewUser"
             Title="AddNewUser">
    <VerticalStackLayout>

        <StackLayout Margin="0,10,0,0">
            <Label Text="Name :"></Label>
            <Entry x:Name="NameEntry" Placeholder="Enter Name"  HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"  ></Entry>
        </StackLayout>

        <StackLayout Margin="0,10,0,0">
            <Label Text="Email :"></Label>
            <Entry  x:Name="EmailEntry" Placeholder="Enter Email" HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"  ></Entry>
        </StackLayout>

        <StackLayout Margin="0,10,0,0">
            <Label Text="Age :"></Label>
            <Entry  x:Name="AgeEntry" Placeholder="Enter Age" HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" Keyboard="Numeric"  TextChanged="NumericEntry_TextChanged"></Entry>
        </StackLayout>
        
        <Button Text="Submit" Clicked="SubmitClicked" />
    </VerticalStackLayout>
</ContentPage>