<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Edituser"
             Title="Edituser">
    
    <VerticalStackLayout>
        <Label 
        Text="Edit User"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <HorizontalStackLayout>
            <Label Text="Name :" />
            <Entry x:Name="NameEntry" Placeholder="{Binding name}" TextColor="Grey" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Email :" />
            <Entry x:Name="EmailEntry" Placeholder="{Binding email}" TextColor="Grey" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Age :" />
            <Entry x:Name="AgeEntry" Placeholder="{Binding age}" TextColor="Grey" />
        </HorizontalStackLayout>

        <Button Text="Save" Clicked="EditUser" />
    </VerticalStackLayout>


</ContentPage>